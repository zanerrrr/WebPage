<div>
    <h2>Subscribe to receive information and news about our database. </h2>
    <p>Enter your email and click subscribe!</p>
</div>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @Html.TextBoxFor(m => m.Email, new {placeholder = "Email"})
    <br />
    <input type="submit" class="btn-primary" value="Subscribe" id="SubscribeButtonId" />
}






